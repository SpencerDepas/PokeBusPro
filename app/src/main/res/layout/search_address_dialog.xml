<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/MyAlertDialogStyle"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="48dp" >

    <TextView
        android:id="@+id/change_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9E9E9E"
        android:textStyle="bold"
        android:text="@string/search_by_location"
        android:layout_marginBottom="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <RelativeLayout
        android:layout_below="@+id/change_sub"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/username_input_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:ems="20"
                    android:layout_marginTop="32dp"
                    android:textColor="#9E9E9E"
                    android:gravity="center"
                    android:id="@+id/seacrhed_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionSearch"
                    android:hint="@string/address"   >
                    <requestFocus />
                </EditText>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>





    </RelativeLayout>





</RelativeLayout>